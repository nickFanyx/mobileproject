<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetail">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fruit / Vegetable"
        android:textAlignment="center"
        android:background="#C5C5C5"
        android:padding="10dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/photo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@id/textView2"
        android:layout_centerInParent="true"
        android:src="@drawable/FujiApple" />

    <TextView

        android:id="@+id/textView3"
        android:layout_below="@id/photo"
        android:text="Fuji Apple"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:text="RM2.00"
        android:textSize="25sp"
        android:textColor="#e91b0f"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/photo2"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_below="@+id/textView4"
        android:src="@drawable/StarRate"

        />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photo2"
        android:textSize="25sp"
        android:text="Product Detail"
        android:textColor="@color/black"
        android:background="#f2f3f4">

    </TextView>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:layout_below="@+id/textView5"
        android:textSize="18sp"
        android:text="The fuji apple is an apple cultivar developed by
glowers at Tohoku Research Station in Fujisaki, Aomori, Japan in the late
1930s "
        android:textColor="@color/black"
        android:background="#f2f3f4">

    </TextView>
</RelativeLayout>